<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/meal_global"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/meal"
    tools:context=".MealActivity">

    <TextView
        android:id="@+id/meal_content_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/orange_border"
        android:text="@string/defaultText"
        android:textAlignment="textStart"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.765" />

    <TextView
        android:id="@+id/meal_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/red_border"
        android:text="@string/defaultText"
        android:textAlignment="textStart"
        android:textColor="?android:attr/textColorPrimaryNoDisable"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/meal_content_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85" />

    <TextView
        android:id="@+id/meal_price_per_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/defaultText"
        android:textColor="#292929"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/add_to_cart"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meal_content_text"
        app:layout_constraintVertical_bias="0.388" />

    <TextView
        android:id="@+id/meal_price_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/defaultText"
        android:textColor="#292929"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/remove_from_cart"
        app:layout_constraintHorizontal_bias="0.191"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meal_content_text"
        app:layout_constraintVertical_bias="0.7" />

    <Button
        android:id="@+id/remove_from_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00F6F6F6"
        android:backgroundTint="#6FFF5A00"
        android:fontFamily="sans-serif-medium"
        android:shadowColor="#FFFFFF"
        android:text="@string/removeFromCart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.776"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meal_content_text"
        app:layout_constraintVertical_bias="0.737"
        android:strokeColor="#FFFFFF" />

    <Button
        android:id="@+id/add_to_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00F6F6F6"
        android:backgroundTint="#6FFF5A00"
        android:shadowColor="#FFFFFF"
        android:text="@string/addToCart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.72"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meal_content_text"
        app:layout_constraintVertical_bias="0.283"
        android:strokeColor="#FFFFFF" />

    <com.synnapps.carouselview.CarouselView
        android:id="@+id/meal_pict"
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:background="@drawable/no_picture"
        app:layout_constraintBottom_toTopOf="@+id/meal_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>